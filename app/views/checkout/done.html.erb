<div id="done">
  <div class="box fluid">
    <h1 class="title">
      Thank you
    </h1>
  </div>

  <div class="checkout_detail">
    <%= render partial: 'shared/checkout_item', locals: {item: @item, total: @total} %>

    <div class="checkout-info box" style="text-align: center">
      <span class="glyphicon glyphicon-ok" style="color: green; font-size: 3em"></span>
      <h4>It is a pleasure to serve you. We will deliver it right on time.</h4>
      <div class="container" style="width: 60%">
        <table class="table table-hover">
          <thead>
            <th style="width: 30%"></th>
            <th style="width: 70%"></th>
          </thead>
          <tbody>
            <tr>
              <td>Name</td>
              <td><%= @name %></td>
            </tr>

            <tr>
              <td>Phone number</td>
              <td><%= @phone_number %></td>
            </tr>

            <tr>
              <td>Address</td>
              <td><%= @address %></td>
            </tr>
          </tbody>


        </table>
      </div>

      <%= link_to 'Go to homepage', home_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
