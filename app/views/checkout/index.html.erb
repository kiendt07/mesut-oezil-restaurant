<div id="checkout">
  <!-- Title -->
  <div class="box fluid">
    <h1 class="title">
      Check out
    </h1>
  </div>

  <!-- Checkout section -->
  <div class="checkout-detail">
    <!-- Table -->
    <%= render partial: 'shared/checkout_item', locals: {item: @item, total: @total} %>

    <div class="checkout-info box">
      <h2 style="text-align: center">Billing info</h2>
      <div class="container" style="width: 60%; text-align: center">
        <form id="form-info" action="<%= url_for(action: 'done') %>" method="post">

          <input name="item" type="hidden" value="<%= @item.id %>">

          <div class="form-group row">
            <label for="name" class="col-md-3 col-sm-3 col-form-label">Name</label>
            <div class="col-md-9 col-sm-9 ">
              <input type="text" class="form-control" id="name" placeholder="Name" name="name">
            </div>
          </div>

          <div class="form-group row">
            <label for="phone" class="col-md-3 col-sm-3 col-form-label">Phone number</label>
            <div class="col-md-9 col-sm-9 ">
              <input type="text" class="form-control" id="phone" placeholder="Phone number" name="phone">
            </div>
          </div>

          <div class="form-group row">
            <label for="address" class="col-md-3 col-sm-3 col-form-label">Address</label>
            <div class="col-md-9 col-sm-9 ">
              <input type="text" class="form-control" id="address" placeholder="Address" name="address">
            </div>
          </div>


          <button class="btn btn-primary" type="submit" form="form-info" value="Submit">Submit</button>
        </form>
      </div>
    </div>

  </div> <!-- end checkout-detail -->

</div>
